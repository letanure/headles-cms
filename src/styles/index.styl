@import url('https://rsms.me/inter/inter.css')

body
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  color #2c3e50
  font-family 'Inter', 'Avenir', Helvetica, Arial, sans-serif
  margin 0
  overflow-y scroll
  padding 0

// override element default stacked form label
.el-form--label-top .el-form-item__label
  display inline-block
  float none
  line-height 35px
  padding 0 0 0px 0
  text-align left

.el-table
  width 100%

.pageHeight
  min-height 100vh

.tip
  padding 8px 16px
  background-color #ecf8ff
  border-radius 4px
  border-left 5px solid #50bfff
  margin 20px 0

.el-table
  .el-table__row
    td:last-child
      a + span
        margin-left 5px
  .el-icon-loading
    margin-right 5px

.fade
  &-enter
    opacity 0
    &-active
      transition opacity .5s cubic-bezier(0.4, 0, 0.2, 1)
  &-leave
    &-active
      transition opacity .5s cubic-bezier(0.4, 0, 0.2, 1)
    &-to
      opacity 0

.flip-list
  &-move
    transition all .5s
    opacity .75
  &-enter-active, &-leave-active
    transition all .5s
  &-enter, &-leave-to
    opacity 0
