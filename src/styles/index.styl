body
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  color #2c3e50
  font-family 'Avenir', Helvetica, Arial, sans-serif
  margin 0
  overflow-y scroll
  padding 0

// override element default stacked form label
.el-form--label-top .el-form-item__label
  display inline-block
  float none
  line-height 35px
  padding 0 0 0px 0
  text-align left

.pageHeight
  min-height 100vh

.tip
  padding: 8px 16px;
  background-color: #ecf8ff;
  border-radius: 4px;
  border-left: 5px solid #50bfff;
  margin: 20px 0;